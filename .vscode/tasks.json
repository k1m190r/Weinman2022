{
    "tasks": [
        {
            "type": "shell",
            "label": "cl.exe build",
            "command": "cl.exe",
            "args": [
                "/Zi",
                "/EHsc",
                "/Wall",
                "/std:c++latest",
                "/Fe:",
                "main.exe",
                "${file}"
            ],
            "options": {
                "cwd": "out"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
        {
            "type": "cppbuild",
            "label": "C/C++",
            "command": "clang++-20",
            "args": [
                "-O3",
                "-stdlib=libc++",
                "-std=c++26",
                "-Wall",
                "-Wextra",
                "-Werror",
                "-pedantic",
                "-pthread",
                "-fdiagnostics-color=always",
                "-g3",
                "-fexperimental-library",
                "${file}",
                "-o",
                "main",
                // "-L/usr/local/lib",
                // "-lfmt",
            ],
            "options": {
                "cwd": "out"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "clang++-20 linux"
        }
    ],
    "version": "2.0.0"
}